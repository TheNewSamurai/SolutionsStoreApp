<div data-role="page" id="main" data-hash="false" data-url="<%= Rho::RhoConfig.start_path %>/">

    <div data-role="header" data-position="inline">
      <div align ="center"><h1>Solutions Store</h1></div>
      <% if SyncEngine::logged_in > 0 %>
      <a href="<%= url_for :controller => :Settings, :action => :do_sync %>" class="ui-btn-left" data-icon="refresh">
        Sync
      </a>
      <% end %>
    </div>
 
    <div class="ui-grid-a" align="center">
      <div class="ui-block-a">
        <!--Insert Container Here-->
        <a href="Product" data-role="button" style="padding:5%"><img src="/public/images/inventory.jpeg" /></a>
        <div>Inventory</div>
      </div>
      <div class="ui-block-b">
        <a href="Partner" data-role="button" style="padding:5%"><img src="/public/images/inventory.jpeg" /></a>
        <div>Partners</div>
      </div>
    </div>
    
    <div data-role="footer" data-position="fixed" data-fullscreen="true">
      <div data-role="navbar">
        <ul>
          <li>
            <a href="<%= url_for :controller => :Settings, :action => :about %>" id="footLink">
            <span class="ui-btn-footer">About</span>
            </a>
          </li>
          <li>
          <% if SyncEngine::logged_in > 0 %>
            <a href="<%= url_for :controller => :Settings, :action => :logout %>" id="footLink">
            <span class="ui-btn-footer">Logout</span>
            </a>
          <% else %>
            <a href="<%= url_for :controller => :Settings, :action => :login %>" id="footLink">
            <span class="ui-btn-footer">Login</span>
            </a>
          <% end %>
          </li>
        </ul>
      </div>
    </div>
    
</div>