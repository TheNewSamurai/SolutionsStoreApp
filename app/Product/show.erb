<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @product.name %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @product.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Upc</div>
            <div class="itemValue"><%= @product.upc %></div>
          </li>
      
          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @product.name %></div>
          </li>
      
          <li>
            <div class="itemLabel">Model</div>
            <div class="itemValue"><%= @product.model %></div>
          </li>
      
          <li>
            <div class="itemLabel">Quantity</div>
            <div class="itemValue"><%= @product.quantity %></div>
          </li>
          

          <!--<li>
            <a href="<%= url_for :action => :picture, :id => @product.object %>">
              See Product2 Picture
            </a>
          </li>-->
          <br>
          <div align="center">
            <img id="picture" src="<%= Rho::RhoApplication::get_blob_path(@product.image) %>" onerror="this.src='/public/images/noImage.jpg';" style="max-width:320px; max-height:240px" />
          </div>
      
    </ul>
  </div>

  <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
          <ul>
            <li>
              <a href="<%= url_for :action => :camera_picture, :id => @product.object %>" id="footLink">
              <span class="ui-btn-footer">Take Picture</span>
              </a>
            </li>
          </ul>
        </div>
      </div>

</div>
