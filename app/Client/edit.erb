<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @client.first %></h1>
    <a href="<%= url_for :action => :show, :id => @client.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @client.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @client.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="client[first]" class="fieldLabel">First</label>
            <input type="text" id="client[first]" name="client[first]" value="<%= @client.first %>" <%= placeholder( "First" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="client[last]" class="fieldLabel">Last</label>
            <input type="text" id="client[last]" name="client[last]" value="<%= @client.last %>" <%= placeholder( "Last" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="client[phone]" class="fieldLabel">Phone</label>
            <input type="text" id="client[phone]" name="client[phone]" value="<%= @client.phone %>" <%= placeholder( "Phone" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="client[address]" class="fieldLabel">Address</label>
            <input type="text" id="client[address]" name="client[address]" value="<%= @client.address %>" <%= placeholder( "Address" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="client[city]" class="fieldLabel">City</label>
            <input type="text" id="client[city]" name="client[city]" value="<%= @client.city %>" <%= placeholder( "City" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="client[state]" class="fieldLabel">State</label>
            <input type="text" id="client[state]" name="client[state]" value="<%= @client.state %>" <%= placeholder( "State" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
