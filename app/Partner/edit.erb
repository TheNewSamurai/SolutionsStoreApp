<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @partner.first %></h1>
    <a href="<%= url_for :action => :show, :id => @partner.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @partner.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @partner.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="partner[first]" class="fieldLabel">First</label>
            <input type="text" id="partner[first]" name="partner[first]" value="<%= @partner.first %>" <%= placeholder( "First" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="partner[last]" class="fieldLabel">Last</label>
            <input type="text" id="partner[last]" name="partner[last]" value="<%= @partner.last %>" <%= placeholder( "Last" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="partner[address]" class="fieldLabel">Address</label>
            <input type="text" id="partner[address]" name="partner[address]" value="<%= @partner.address %>" <%= placeholder( "Address" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="partner[city]" class="fieldLabel">City</label>
            <input type="text" id="partner[city]" name="partner[city]" value="<%= @partner.city %>" <%= placeholder( "City" ) %> />
